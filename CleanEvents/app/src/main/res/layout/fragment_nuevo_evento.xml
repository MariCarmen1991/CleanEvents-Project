<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NuevoEventoFragment">

        <EditText
            android:id="@+id/input_nombre_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColorLink="@color/color_boton_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/nombre_evento" />

        <View
            android:id="@+id/divider12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toTopOf="@+id/guideline31" />

        <EditText
            android:id="@+id/input_lugar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColorLink="@color/color_boton_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/lugar_evento" />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:text="@string/txt_date"
            android:textColor="@color/color_acento"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/fecha_evento"
            app:strokeColor="@color/color_acento"
            app:strokeWidth="1dp" />

        <EditText
            android:id="@+id/input_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="500"
            android:maxLines="25"
            android:text=""
            android:textColorLink="@color/color_boton_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/descripcion_evento" />

        <TextView
            android:id="@+id/descripcion_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/txt_descripcion"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/btn_map" />

        <View
            android:id="@+id/divider13"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/actividades" />

        <TextView
            android:id="@+id/zona_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="@string/txt_zona"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pista_evento"
            app:layout_constraintEnd_toStartOf="@+id/input_zona"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tesoro_evento"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/actividad_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_actividad"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/input_descripcion" />

        <Switch
            android:id="@+id/anadir_tesoro"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toEndOf="@+id/tesoro_evento"
            app:layout_constraintTop_toBottomOf="@+id/divider13" />

        <EditText
            android:id="@+id/input_zona"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColorLink="@color/color_boton_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toEndOf="@+id/zona_evento"
            app:layout_constraintTop_toBottomOf="@+id/anadir_tesoro" />

        <TextView
            android:id="@+id/tesoro_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_busqueda_tesoro"
            android:textAlignment="center"
            android:textColor="?attr/colorButtonNormal"
            app:layout_constraintStart_toStartOf="@+id/actividades"
            app:layout_constraintTop_toBottomOf="@+id/divider13" />

        <Spinner
            android:id="@+id/actividades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/actividad_evento" />

        <EditText
            android:id="@+id/input_pista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColorLink="@color/color_boton_main"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/pista_evento"
            app:layout_constraintTop_toBottomOf="@+id/input_zona" />

        <TextView
            android:id="@+id/pista_evento"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginEnd="1dp"
            android:text="@string/txt_pista"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/input_pista"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/input_zona" />

        <TextView
            android:id="@+id/get_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="DD/MM/YYYY"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_date"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/fecha_evento" />

        <TextView
            android:id="@+id/cordenadas_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableTop="@drawable/twotone_fmd_good_24"
            android:drawableTint="@color/color_acento"
            android:text="@string/txt_cordenadas"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/color_acento"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/get_fecha" />

        <TextView
            android:id="@+id/fecha_evento"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="24dp"
            android:text="@string/txt_fecha"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/input_lugar" />

        <TextView
            android:id="@+id/lugar_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_lugar"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/input_nombre_evento" />

        <TextView
            android:id="@+id/nombre_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/txt_nombre_evento"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/divider12" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:text="@string/txt_guardar"
            android:textAllCaps="false"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/input_pista" />

        <Button
            android:id="@+id/btn_cargar_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/txt_cargar_foto"
            android:textColor="@color/color_acento"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toTopOf="@+id/guideline33"
            app:strokeColor="@color/color_acento"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/image_lugar_tesoro"
            android:layout_width="149dp"
            android:layout_height="113dp"
            android:layout_marginTop="4dp"
            android:endColor="#000000"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@+id/guideline31"
            app:layout_constraintEnd_toStartOf="@+id/guideline23"
            app:layout_constraintHorizontal_bias="0.283"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toTopOf="@+id/guideline33"
            tools:src="@drawable/nodisponible" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_lon"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/cordenadas_evento" />

        <TextView
            android:id="@+id/lat_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_lat"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/lon_id"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/cordenadas_evento" />

        <TextView
            android:id="@+id/lon_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_lon"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toEndOf="@+id/lat_id"
            app:layout_constraintTop_toBottomOf="@+id/cordenadas_evento" />

        <Button
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="160dp"
            android:backgroundTint="@color/white"
            android:text="@string/txt_mapa"
            android:textAlignment="center"
            android:textColor="@color/color_acento"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cordenadas_evento"
            app:strokeColor="@color/color_acento"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/tv_lon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toEndOf="@+id/tv_lat"
            app:layout_constraintTop_toBottomOf="@+id/cordenadas_evento" />

        <EditText
            android:id="@+id/get_time_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="36dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/color_acento"
            app:layout_constraintEnd_toStartOf="@+id/guideline26"
            app:layout_constraintStart_toEndOf="@+id/btn_map"
            app:layout_constraintTop_toTopOf="@+id/btn_date"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="Hora Final"
            android:inputType="time"/>

        <EditText
            android:id="@+id/get_time_1"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="140dp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_map"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            app:layout_constraintTop_toBottomOf="@+id/get_fecha"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="Hora Inicio"
            android:inputType="time"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.5" />

        <ProgressBar
            android:id="@+id/progressimage"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline23"
            app:layout_constraintHorizontal_bias="0.316"
            app:layout_constraintStart_toStartOf="@+id/image_lugar_tesoro"
            app:layout_constraintTop_toTopOf="@+id/image_lugar_tesoro" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.01" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>